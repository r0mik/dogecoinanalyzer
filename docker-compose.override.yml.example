# Example override file for local development
# Copy this to docker-compose.override.yml and customize as needed
# docker-compose.override.yml is automatically loaded by docker-compose

version: '3.8'

services:
  dashboard:
    environment:
      FLASK_ENV: development
    volumes:
      - ./dashboard:/app/dashboard  # Mount for hot-reload during development
      - ./config:/app/config
      - ./database:/app/database
      - ./utils:/app/utils

  collector:
    volumes:
      - ./collector:/app/collector  # Mount for development
      - ./config:/app/config
      - ./database:/app/database
      - ./utils:/app/utils

  analyzer:
    volumes:
      - ./analyzer:/app/analyzer  # Mount for development
      - ./config:/app/config
      - ./database:/app/database
      - ./utils:/app/utils

